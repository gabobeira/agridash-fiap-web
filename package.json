{
  "name": "agridash-fiap-web",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:root": "turbo run dev --filter=root",
    "dev:dashboard": "turbo run dev --filter=dashboard",
    "dev:microfrontends": "concurrently \"npm run dev:root\" \"npm run dev:dashboard\"",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "validate": "npm run lint && npm run check-types && npm run test"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@tabler/icons-react": "^3.34.1"
  }
}
